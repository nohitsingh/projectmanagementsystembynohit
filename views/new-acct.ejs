<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, inipmstial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Project Management System - homepage</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/stylesheets/style.css" rel="stylesheet">
    <link href="new-acct.ejs" rel="stylesheet">
    <style>
        #dropdown {
            position: relative;
            top:-15px;
            right:-250px;
            padding: 20px;
        }
        /* Add a green text color and a checkmark when the requirements are right */
        .valid {
            color: green;
        }
        /* Add a red text color and an "x" when the requirements are wrong */
        .invalid {
            color: red;
        }
    </style>
</head>

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account</h1>
                            </div><br>
                            <form class="user" action="/login/new" method="POST" id="form-user">
                                <div class="form-group" style="color: red;">&nbsp;&nbsp;&nbsp;
                                    <% if (error !=null) { %>

                                        <%= error %>
                                            <% } %>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" name="fname" class="form-control form-control-user"
                                            id="exampleFirstName" placeholder="First Name" onkeyup="enableSubmit()">
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" name="lname" class="form-control form-control-user"
                                            id="exampleLastName" placeholder="Last Name" onkeyup="enableSubmit()">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="email" name="emailInput" class="form-control form-control-user"
                                        id="exampleInputEmail" placeholder="Email Address" onkeyup="enableSubmit()">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="pwdInput" class="form-control form-control-user"
                                        id="pwdInput" placeholder="Password" onkeyup="enableSubmit()">
                                </div>
                                <div aria-labelledby="userDropdown"class="dropdown dropdown-menu dropdown-menu-right shadow animated--grow-in text-center"id="dropdown">

                            
                                    Password must contain the following:<br><br>
                                    <p id="letter1" class="invalid">A <b>lowercase</b> letter</p>
                                    <p id="capital2" class="invalid">A <b>capital (uppercase)</b> letter</p>
                                    <p id="number3" class="invalid">A <b>number</b></p>
                                    <p id="length4" class="invalid">Minimum <b>8 characters</b></p>
                                        </div>
                                <br>
                                <input type="submit" class="btn btn-primary btn-user btn-block" value="Create Account"
                                    disabled>


                            </form>

                            <hr>
                            <div class="text-center">
                                <a class="small" href="/login" style="text-decoration: none;">Already have an account?
                                    Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
       
        

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/js/pms.min.js"></script>
    <script src="/js/submit.js"></script>

    <script src="new-acct.js" type="text/javascript"></script>


</body>
